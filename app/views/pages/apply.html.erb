<%= render partial: "shared/heading", locals: {title: 'Apply to Founder Digest', tagline: 'Each submission is manually reviewed by our team within 24 hours.'} %>

<% plan_name = params[:plan] || 'free' %>

<div class="max-w-sm mx-auto">
  <%= form_for UserSubmission.new do |f| %>
    <div class="space-y-12">
      <input type="hidden" id="user_submission_plan_name" name="user_submission[plan_name]" value="<%= plan_name %>">

      <div class="">
        <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
          <div class="sm:col-span-3">
            <label for="first_name" class="block text-sm font-medium leading-6 text-gray-900">First name</label>
            <div class="mt-2">
              <%= f.text_field :first_name, required: true, placeholder: 'Matti', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
            </div>
          </div>
  
          <div class="sm:col-span-3">
            <label for="last_name" class="block text-sm font-medium leading-6 text-gray-900">Last name</label>
            <div class="mt-2">
              <%= f.text_field :last_name, required: true, placeholder: 'Salimi', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
            </div>
          </div>
  
          <div class="sm:col-span-6">
            <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email address</label>
            <div class="mt-2">
              <%= f.text_field :email, type: 'email', required: true, placeholder: 'egdapa@hotmail.com', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
            </div>
          </div>
  
          <div class="sm:col-span-6">
            <label for="website" class="block text-sm font-medium leading-6 text-gray-900">Company website</label>
            <div class="mt-2">
              <%= f.text_field :website, type: 'url', required: true, placeholder: 'https://hotmail.com', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
            </div>
          </div>
        </div>
      </div>
  
      <div class="">
        <div class="mt-10 space-y-10">
          <fieldset>
            <legend class="text-sm font-semibold leading-6 text-gray-900">What's your role?</legend>
            <div class="mt-1 space-y-4">
              <div class="flex items-center gap-x-3">
                <%= f.radio_button :job_role, 'c-suite', required: true, class: 'h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600' %>
                <%= f.label :job_role, 'C-Suite', :value => 'c-suite', class: 'block text-sm font-medium leading-6 text-gray-900' %>

                <%= f.radio_button :job_role, 'founder', required: true, class: 'h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600' %>
                <%= f.label :job_role, 'Founder', :value => 'founder', class: 'block text-sm font-medium leading-6 text-gray-900' %>

                <%= f.radio_button :job_role, 'employee', required: true, class: 'h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600' %>
                <%= f.label :job_role, 'Employee', :value => 'employee', class: 'block text-sm font-medium leading-6 text-gray-900' %>


              </div>
            </div>
          </fieldset>
        </div>
      </div>
  
      <div class="col-span-full">
        <label for="text" class="block text-sm font-medium leading-6 text-gray-900">About</label>
        <div class="mt-2">
          <%= f.text_area :text, required: true, placeholder: "Stakeholders,&#10;&#10;This month we worked primarily on...".html_safe, rows: 6, class: 'block w-full rounded-md border-0 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:py-1.5 sm:text-sm sm:leading-6' %>
        </div>
        <p class="mt-3 text-sm leading-6 text-gray-600">The more detailed, the more likely you'll be accepted.</p>
      </div>
    </div>
  
    <div class="mt-6 flex items-center justify-end gap-x-6">
      <button type="submit" class="w-full rounded-md bg-brand-blue px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-blue-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Apply</button>
    </div>
  <% end %>
  
</div>
