<%= render partial: "shared/heading", locals: {title: 'Dashboard', tagline: 'Browse newsletters and upload your own.'} %>

<!-- main box area -->
<div class="border border-black border-2 p-5 max-w-3xl mx-auto mb-20">
    <div class="flex">
        <div class="basis-1/2">
            <div class="flex gap-x-2">
                <div class="basis-1/6">
                    <img src="https://placehold.co/150" alt="">
                </div>
                <div class="basis-5/6">
                    <p class="text-lg">{{ Title }}</p>
                    <p class="text-sm">{{ Description }}</p>
                </div>
            </div>
        </div>
        <div class="basis-1/2 text-right">
            <p>{{ Num }} Subscribers</p>
            <p><a href="/stakeholder_updates/new" class="underline">Share update</a></p>
            <p><a href="" class="underline">Edit subscription</a></p>
        </div>
    </div>
</div>

<!-- newsletters -->
<div class="p-5 max-w-3xl mx-auto space-y-2">
    <% 5.times do %>
        <div class="flex">
            <div class="basis-1/2">
                <div class="flex gap-x-2">
                    <div class="basis-1/6">
                        <img src="https://placehold.co/150" alt="">
                    </div>
                    <div class="basis-5/6">
                        <p class="text-lg">{{ Title }}</p>
                        <p class="text-sm">{{ Description }} {{ URL }}</p>
                    </div>
                </div>
            </div>
            <div class="basis-1/2 text-right">
                <div class="relative flex items-start pb-4 pt-3.5">
                    <div class="min-w-0 flex-1 text-sm leading-6">
                    <label for="subscribed" class="font-medium text-gray-900">{{ Subscribed }}</label>
                    </div>
                    <div class="ml-3 flex h-6 items-center">
                    <input id="subscribed" aria-describedby="subscribed-description" name="subscribed" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
