<%= render partial: "shared/heading", locals: {title: 'Dashboard', tagline: 'Browse newsletters and upload your own.'} %>

<!-- main box area -->
<div class="border border-black border-2 p-5 max-w-3xl mx-auto mb-20">
    <div class="flex">
        <div class="basis-1/2">
            <div class="flex gap-x-2">
                <div class="basis-1/6">
                    <!-- <img src="https://placehold.co/150" alt=""> -->
                    <img src="https://logo.clearbit.com/http://<%= @project.website %>" alt="">
                </div>
                <div class="basis-5/6">
                    <p class="text-lg"><%= @project.title %></p>
                    <p class="text-sm"><%= @project.description %></p>
                </div>
            </div>
        </div>
        <div class="basis-1/2 text-right">
            <p>{{ Num }} Subscribers</p>
            <p><a href="/stakeholder_updates/new" class="text-brand-orange">Share update</a></p>
            <p><a href="" class="text-brand-blue">Edit subscription</a></p>
        </div>
    </div>
</div>

<!-- newsletters -->
<div class="p-5 max-w-3xl mx-auto space-y-4">
    <% @other_projects.each do |other_project| %>
        <div class="flex border border-dashed border-2 p-2">
            <div class="basis-1/2">
                <div class="flex gap-x-2">
                    <div class="basis-1/6">
                    <img src="https://logo.clearbit.com/http://<%= other_project.website %>" alt="">
                    </div>
                    <div class="basis-5/6">
                        <p class="text-lg"><%= other_project.title %></p>
                        <p class="text-xs"><%= other_project.description %> (<%= other_project.website %>)</p>
                    </div>
                </div>
            </div>
            <div class="basis-1/2 text-right">
                <div class="relative flex items-start pb-4 pt-3.5">
                    <div class="min-w-0 flex-1 text-sm leading-6">
                    <label for="subscribed" class="font-medium text-gray-900">{{ Subscribed }}</label>
                    </div>
                    <div class="ml-3 flex h-6 items-center">
                    <input id="subscribed" aria-describedby="subscribed-description" name="subscribed" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-brand-orange focus:ring-brand-orange-dark">
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
